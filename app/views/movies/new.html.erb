<h1>New Movie</h1>

<%= form_with scope: :movie, url: movies_path, local: true do |form| %>
	<p>
		<%= form.label :title %><br>
		<%= form.text_field :title %><br>
	</p>

	<p>
		<%= form.label :director %><br>
		<%= form.text_field :director %><br>
	</p>

	<p>
		<%= form.label :description %><br>
		<%= form.text_area :description %><br>
	</p>

	<p>
		<%= form.submit %>
	</p>
<% end %>